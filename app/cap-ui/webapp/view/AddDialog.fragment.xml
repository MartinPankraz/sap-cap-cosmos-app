<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core"
   xmlns:l="sap.ui.layout" >
   <Dialog
      title="Add flight">
      <endButton>
         <Button
            text="close"
            press="onCloseDialog"/>
      </endButton>
      <beginButton>
         <Button
            text="send"
            press="onSend"/>
      </beginButton>
      <l:VerticalLayout class="sapUiContentPadding" width="100%">
		<Input
            id="dlg_id"
			value="001"
			description="id"
			width="100px"
			fieldWidth="60%"
			class="sapUiSmallMarginBottom" />
		<Input
			id="dlg_carrid"
            value="LH"
			description="carrid"
			width="250px"
			fieldWidth="80%"
			class="sapUiSmallMarginBottom" />
		<Input
			id="dlg_connid"
            value="99"
			description="connid"
			width="250px"
			fieldWidth="80%"
			class="sapUiSmallMarginBottom" />
		<Input
			id="dlg_fldate"
            value="20210525"
			description="fldate"
			width="250px"
			fieldWidth="80%"
			class="sapUiSmallMarginBottom" />
		<Input
			id="dlg_planetype"
            value="747-800"
			description="planetype"
			width="250px"
			fieldWidth="80%"
			class="sapUiSmallMarginBottom" />
        <Input
			id="dlg_seatsmax"
            value="800"
			description="seatsmax"
			width="250px"
			fieldWidth="80%"
			class="sapUiSmallMarginBottom" />
        <Input
			id="dlg_seatsocc"
            value="0"
			description="seatsocc"
			width="250px"
			fieldWidth="80%"
			class="sapUiSmallMarginBottom" />
	</l:VerticalLayout>
   </Dialog>
</core:FragmentDefinition>